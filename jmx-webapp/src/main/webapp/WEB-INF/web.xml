<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>Wait0sServlet</servlet-name>
    <servlet-class>org.crash.demo.Wait0sServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Wait1sServlet</servlet-name>
    <servlet-class>org.crash.demo.Wait1sServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Wait2sServlet</servlet-name>
    <servlet-class>org.crash.demo.Wait2sServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Wait0sServlet</servlet-name>
    <url-pattern>/wait0</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Wait1sServlet</servlet-name>
    <url-pattern>/wait1</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Wait2sServlet</servlet-name>
    <url-pattern>/wait2</url-pattern>
  </servlet-mapping>

</web-app>